<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/colorCardBackground">

        <android.support.constraint.ConstraintLayout
                android:layout_width="343dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="16dp">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/post_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/skill_name"
                    android:hint="skills name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/post_image"
                    android:layout_marginTop="8dp"/>


            <TextView android:layout_width="179dp"
                      android:text="@string/description"
                      android:textColor="@color/colorHeader"
                      android:textSize="18sp"
                      android:layout_height="30dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginEnd="168dp"
                      app:layout_constraintStart_toStartOf="parent"
                      android:id="@+id/textView8"
                      app:layout_constraintHorizontal_bias="0.0" tools:ignore="MissingConstraints"
                      android:layout_marginTop="22dp" app:layout_constraintTop_toBottomOf="@+id/skill_name"/>

            <TextView android:layout_width="290dp"
                      android:layout_height="wrap_content"
                      android:id="@+id/my_need_desc"
                      android:layout_marginTop="14dp"
                      app:layout_constraintTop_toBottomOf="@+id/textView8" android:layout_marginEnd="27dp"
                      app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginStart="26dp"/>

            <Button android:layout_width="136dp"
                    android:layout_height="78dp"
                    android:background="@drawable/btn_add"
                    android:id="@+id/proposal_btn"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/my_need_desc"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="105dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="102dp"
                    app:layout_constraintHorizontal_bias="1.0"/>


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>