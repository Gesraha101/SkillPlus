<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="472dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/colorCardBackground">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="442dp"
                android:layout_margin="16dp" tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="16dp">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/post_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/skill_name"
                    android:hint="skills name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/post_image"
                    android:layout_marginTop="8dp"/>


            <TextView
                    android:id="@+id/skill_price"
                    android:layout_width="150dp"
                    android:layout_height="38dp"
                    android:text="@string/skill_price"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/skill_name" android:layout_marginStart="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/skill_name"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.9"/>

            <TextView android:layout_width="179dp"
                      android:text="Details"
                      android:textColor="@color/colorHeader"
                      android:textSize="18sp"
                      android:layout_height="30dp"
                      android:layout_marginTop="8dp"
                      app:layout_constraintTop_toBottomOf="@+id/skill_name" app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginEnd="168dp" app:layout_constraintStart_toStartOf="parent"
                      android:id="@+id/textView8"/>
            <TextView
                    android:text="Sessions duration:"
                    android:layout_width="179dp"
                    android:layout_height="30dp" android:id="@+id/textView5"
                    android:textColor="@color/colorHeader"
                    android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/session_number"
                    android:layout_marginEnd="24dp" android:layout_marginTop="3dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"/>
            <TextView
                    android:text="Number of sessions:"
                    android:layout_width="179dp"
                    android:layout_height="30dp" android:id="@+id/textView7"
                    android:textColor="@color/colorHeader"
                    android:textSize="18sp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView8"
                    app:layout_constraintEnd_toStartOf="@+id/session_number"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:text="Fees for extra sessions:"
                    android:layout_width="208dp"
                    android:layout_height="37dp"
                    android:id="@+id/textView"
                    android:textColor="@color/colorHeader"
                    android:textSize="18sp" app:layout_constraintTop_toBottomOf="@+id/textView5"
                    app:layout_constraintEnd_toStartOf="@+id/session_duration"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
            <TextView android:layout_height="36dp" android:layout_width="112dp"
                      android:id="@+id/session_number" tools:ignore="MissingConstraints"
                      android:layout_marginStart="24dp" app:layout_constraintStart_toEndOf="@+id/textView5"
                      app:layout_constraintTop_toBottomOf="@+id/skill_price"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"></TextView>

            <TextView android:layout_height="36dp" android:layout_width="112dp"
                      android:id="@+id/extra_session" tools:ignore="MissingConstraints"
                      android:layout_marginStart="22dp" app:layout_constraintStart_toEndOf="@+id/textView"
                      android:layout_marginTop="1dp"
                      app:layout_constraintTop_toBottomOf="@+id/session_duration"
                      app:layout_constraintEnd_toEndOf="parent"></TextView>

            <TextView android:layout_height="36dp" android:layout_width="112dp"
                      android:id="@+id/session_duration"
                      tools:ignore="MissingConstraints" app:layout_constraintStart_toEndOf="@+id/textView"
                      android:layout_marginEnd="11dp" app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/session_number"></TextView>


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>