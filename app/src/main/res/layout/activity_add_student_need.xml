<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".views.activities.AddNeedActivity">

    <EditText
            android:id="@+id/titleEditText"
            android:layout_width="311dp"
            android:layout_height="50dp"
            android:background="@drawable/title"
            android:hint="title"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColorHint="#004234"
            android:textSize="18dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp" android:layout_marginRight="25dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp" android:layout_marginStart="25dp"/>


    <EditText
            android:id="@+id/descEditText"
            android:layout_width="311dp"
            android:layout_height="80dp"
            android:background="@drawable/description"
            android:hint="@string/description"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColorHint="#004234"
            android:textSize="18sp"
            android:maxLength="250"
            android:singleLine="false"
            android:lines="5"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/titleEditText"/>


    <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="311dp"
            android:layout_height="80dp"
            android:background="@drawable/category"
            android:hint="category"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColorHint="#004234"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/descEditText"/>

    <TextView
            android:id="@+id/btn_sign_up"
            android:layout_width="262dp"
            android:layout_height="60dp"
            android:background="#E2E9E7"
            android:focusable="false"
            android:text="Add Image"

            android:textAlignment="center"
            android:drawableRight="@drawable/ic_launcher_foreground"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#004334"
            android:paddingTop="10dp"
            android:textSize="25dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/categorySpinner"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"/>
    <Button
            android:id="@+id/btn_add_need"
            android:layout_width="248dp"
            android:layout_height="48dp"
            android:background="@drawable/button_layout"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="#F3D100"
            android:textSize="28dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_sign_up"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="82dp"
            android:layout_marginRight="82dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="82dp"
            android:layout_marginStart="82dp"/>


</android.support.constraint.ConstraintLayout>