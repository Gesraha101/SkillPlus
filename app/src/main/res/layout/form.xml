<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp"
            card_view:cardBackgroundColor="@color/colorCardBackground">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/form_user_image"
                    card_view:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintEnd_toStartOf="@+id/form_user_name" android:layout_marginEnd="11dp"/>

            <TextView
                    android:layout_width="170dp"
                    android:layout_height="45dp"
                    android:id="@+id/form_user_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    card_view:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" card_view:layout_constraintStart_toEndOf="@+id/form_user_image"
                    android:layout_marginStart="11dp" card_view:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"/>


            <TextView
                    android:layout_width="170dp"
                    android:layout_height="45dp"
                    android:id="@+id/form_price"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    card_view:layout_constraintStart_toEndOf="@+id/form_user_image"
                    android:layout_marginStart="14dp" card_view:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
                    card_view:layout_constraintTop_toBottomOf="@+id/form_user_name"/>


            <TextView
                    android:layout_width="173dp"
                    android:layout_height="42dp"
                    android:id="@+id/form_duration"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" card_view:layout_constraintTop_toBottomOf="@+id/form_price"
                    card_view:layout_constraintStart_toEndOf="@+id/form_user_image" android:layout_marginStart="15dp"
                    card_view:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp"/>

            <TextView
                    android:layout_width="341dp"
                    android:layout_height="59dp"
                    android:id="@+id/form_schedule_list"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    card_view:layout_constraintTop_toBottomOf="@+id/form_duration"
                    card_view:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="15dp"
                    card_view:layout_constraintStart_toStartOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>