<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/colorCardBackground">

        <android.support.constraint.ConstraintLayout
                android:layout_width="364dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/post_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/skill_name"
                    android:hint="skills name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/post_image"
                    android:layout_marginTop="8dp"/>


            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:id="@+id/poster_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srb_borderColor="@color/colorPrimary"
                    app:srb_fillColor="@color/colorPrimary"
                    app:srb_numberOfStars="5"
                    app:srb_starBorderWidth="2"
                    app:srb_starCornerRadius="20"
                    app:srb_isIndicator="true"
                    app:srb_starSize="30dp"
                    app:srb_stepSize="0.1"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@+id/skill_name"
                    app:layout_constraintEnd_toStartOf="@+id/skill_price" android:layout_marginEnd="10dp"/>


            <TextView
                    android:id="@+id/skill_price"
                    android:layout_width="150dp"
                    android:layout_height="38dp"
                    android:text="@string/skill_price"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/poster_rate" android:layout_marginStart="10dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@+id/skill_name"/>

            <TextView android:layout_width="179dp"
                      android:text="Details"
                      android:textColor="@color/colorHeader"
                      android:textSize="18sp"
                      android:layout_height="30dp"
                      android:layout_marginTop="8dp"
                      app:layout_constraintTop_toBottomOf="@+id/poster_rate"
                      app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginEnd="168dp" android:id="@+id/textView9"/>
            <TextView
                    android:text="Sessions duration:"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textColor="@color/colorHeader"
                    android:textSize="18sp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/session_number"
                    android:layout_marginEnd="24dp"/>
            <TextView
                    android:text="Number of sessions:"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content" android:id="@+id/textView7"
                    android:textColor="@color/colorHeader"
                    android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    app:layout_constraintEnd_toStartOf="@+id/session_number" android:layout_marginEnd="24dp"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:text="Fees for extra sessions:"
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textColor="@color/colorHeader"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    app:layout_constraintEnd_toStartOf="@+id/session_duration" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView android:layout_height="wrap_content" android:layout_width="112dp"
                      android:id="@+id/session_number" tools:ignore="MissingConstraints"
                      android:layout_marginStart="24dp" app:layout_constraintStart_toEndOf="@+id/textView5"
                      android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/skill_price"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>

            <TextView android:layout_height="wrap_content" android:layout_width="112dp"
                      android:id="@+id/extra_session" tools:ignore="MissingConstraints"
                      android:layout_marginStart="11dp" app:layout_constraintStart_toEndOf="@+id/textView"
                      android:layout_marginTop="1dp"
                      app:layout_constraintTop_toBottomOf="@+id/session_duration"
                      app:layout_constraintEnd_toEndOf="parent"/>

            <TextView android:layout_height="wrap_content"
                      android:layout_width="112dp"
                      android:id="@+id/session_duration"
                      tools:ignore="MissingConstraints"
                      app:layout_constraintTop_toBottomOf="@+id/session_number"
                      app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginEnd="11dp"
                      app:layout_constraintEnd_toEndOf="parent"/>


            <android.support.v7.widget.RecyclerView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_my_skills_schedual"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintTop_toBottomOf="@+id/extra_session"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="40dp" app:layout_constraintHorizontal_bias="1.0"
                    android:layout_marginEnd="10dp" android:layout_marginStart="10dp">

            </android.support.v7.widget.RecyclerView>

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>