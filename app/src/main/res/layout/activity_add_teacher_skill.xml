                <!--android:layout_width="150dp"-->
                <!--android:layout_height="match_parent" app:srcCompat="@drawable/camera_icon"-->
                <!--android:id="@+id/imageView4"-->
                <!--tools:layout_editor_absoluteY="488dp" tools:layout_editor_absoluteX="255dp"/>-->
                <!--</LinearLayout>-->
            </android.support.constraint.ConstraintLayout>
        </ScrollView>

    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>